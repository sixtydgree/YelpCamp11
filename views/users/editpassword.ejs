<% include ../partials/header %>

<p id="note">
        <span id="reqField">*</span> = Required
    </p>
 <div class="row">
        <h1 style="text-align: center">Update Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user._id %>/password" method="POST">
                <div class="form-group">
                    <label for="password">Password</label><span id="reqField">*</span>
                    <input class="form-control" type="password" placeholder="New password" name="user[password]" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update Password</button>
                </div>
            </form>
            <a href="/users/<%= user._id %>">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>