<% include ../partials/header %>

<p id="note">
        <span id="reqField">*</span> = Required
    </p>
 <div class="row">
        <h1 style="text-align: center">Update Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label name="user[email]">Email</label><span id="reqField">*</span>
                    <input class="form-control" type="email" name="user[email]" value="<%= user.email %>" required>
                </div>
                <div class="form-group">
                    <label name="user[bio]">Bio</label>
                    <textarea rows="2" cols="25" maxlength="300" id="bioField" onkeyup="countChar(this)" class="form-control" type="text" name="user[bio]"><%= user.bio %></textarea>
                    <div id="charNum"></div>
                </div>
                <div class="form-group">
                    <label name="user[avatar]">Avatar URL</label>
                    <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/users/<%= user._id %>">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>